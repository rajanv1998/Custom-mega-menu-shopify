        "label": "Enable Megamenu for Fifth link"
    },
	{
        "type": "checkbox",
        "id": "check_6",
        "label": "Enable Megamenu for Sixth link"
    },
	{
        "type": "checkbox",
        "id": "check_7",
        "label": "Enable Megamenu for Seventh link"
    },
	{
        "type": "checkbox",
        "id": "check_8",
        "label": "Enable Megamenu for Eighth link"
    },      
{
  "type": "checkbox",
  "id": "mega_menu_images",
  "label": "Mega menu Images",
  "default": true
}
 
],
    
"blocks": [
{
  "type": "image",
  "name": "Mega Menu Image",
  "settings": [
    {
          "type": "text",
